<h1>Listing posicions</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Imagen</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posicions.each do |posicion| %>
      <tr>
        <td><%= posicion.nombre %></td>
        <td><%= posicion.imagen %></td>
        <td><%= link_to 'Show', posicion %></td>
        <td><%= link_to 'Edit', edit_posicion_path(posicion) %></td>
        <td><%= link_to 'Destroy', posicion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

